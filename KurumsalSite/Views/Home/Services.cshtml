@model IEnumerable<KurumsalSite.Models.Service>
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Portfolio</h2>
            <h3>Check our <span>Portfolio</span></h3>
            <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
        </div>

      
        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 portfolio-item filter-card">
                    <img src="@item.PictureUrl" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <h4>@item.Ttle</h4>
                        <p>Card</p>
                        <a href="~/assets/site/img/portfolio/portfolio-7.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="Card 1"><i class="bx bx-plus"></i></a>
                        <a href="portfolio-details.html" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                    </div>
                </div>
            }




        </div>

    </div>
</section><!-- End Portfolio Section -->
