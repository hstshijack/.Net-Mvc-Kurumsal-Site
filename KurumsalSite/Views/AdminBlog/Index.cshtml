@model IEnumerable<KurumsalSite.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="card mt-5">
        <div class="card-body">
            <p>
         
                <a class="btn btn-primary" href="/AdminBlog/Create">Blog Oluştur</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PictureURL)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.Raw(item.Content)
                        </td>
                        <td>
                            <img src="@item.PictureURL" class="img-responsive" width="150" />
                        </td>
                        <td>
                            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id },new {@class="btn btn-success"}) 
                            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


