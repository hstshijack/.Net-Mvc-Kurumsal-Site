@model IEnumerable<KurumsalSite.Models.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card mt-5">
        <div class="card-body">
            <p>
                <a class="btn btn-primary" href="/Sliders/Create">Slider Oluştur</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PictureUrl)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <img src="@item.PictureUrl" class="img-responsive" width="150" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SliderId },new {@class="btn btn-success"}) 
                            @Html.ActionLink("Details", "Details", new { id = item.SliderId }, new { @class = "btn btn-primary" }) 
                            @Html.ActionLink("Delete", "Delete", new { id = item.SliderId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>



