@model KurumsalSite.Models.Service

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="card mt-5">
        <div class="card-body">
            <h5>Silmek istediğinize emin misiniz?</h5>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Ttle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ttle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.Raw(Model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PictureUrl)
                </dt>

                <dd>
                    @Html.DisplayNameFor(model => model.PictureUrl)
                </dd>

            </dl>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a class="btn btn-primary" href="/AdminServices/Index">Geri Dön</a>

        </div>
    }
</div>

 
 




