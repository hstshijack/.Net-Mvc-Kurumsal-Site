@model IEnumerable<KurumsalSite.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
   
    <div class="card mt-5">
      
        <div class="card-body">
            <p>
                <a href="/AdminServices/Create" class="btn btn-facebook">Hizmet Ekle</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Ttle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PictureUrl)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ttle)
                        </td>
                        <td>
                            @Html.Raw(item.Description)
                        </td>
                        <td>
                            <img src="@item.PictureUrl" width="100" height="100" />
                        </td>
                        <td>
                            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>



