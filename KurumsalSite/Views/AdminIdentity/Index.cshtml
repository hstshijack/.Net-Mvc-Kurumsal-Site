@model IEnumerable<KurumsalSite.Models.Identity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="card mt-5">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Keywords)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LogoURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SiteTitle)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Keywords)
                    </td>
                    <td>
                        @Html.Raw(@item.Description)
                    </td>
                    <td>


                        <img src="@item.LogoURL" class="img-responsive" width="125" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SiteTitle)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.Id },new {@class="btn btn-success "}) 
                        
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary mt-2" }) 
                      
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



